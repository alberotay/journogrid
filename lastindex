<body>
    <div class="news-column">
        <h1>El Mundo</h1>
        <div class="news-container" id="elMundoNews">
            <div class="loading-message">Cargando noticias...</div>
        </div>
    </div>

    <div class="news-column">
        <h1>El Peri√≥dico</h1>
        <div class="news-container" id="elPeriodicoNews">
            <div class="loading-message">Cargando noticias...</div>
        </div>
    </div>

    <script>
        async function fetchRSS(url, containerId) {
        const loadingMessage = document.querySelector(`#${containerId} .loading-message`);
        const newsContainer = document.getElementById(containerId);

        loadingMessage.style.display = 'block';

        try {
            const response = await fetch(url);
            const data = await response.json();
            const items = data.items;

            

                items.forEach(item => {
                    const title = item.title;
                    const link = item.link;
                    const description = item.description;
                    const pubDate = new Date(item.pubDate).toLocaleString();
                    const source = item.source;
                    const imageLink = item.imageLink;

                    const newsItem = document.createElement('div');
                    newsItem.classList.add('news-item');
                    newsItem.innerHTML = `
                        <h2><a href="${link}" target="_blank">${title}</a></h2>
                        <div class="publication-info">
                            <p>${pubDate}</p>
                            <p class="source">${source}</p>
                        </div>
                        ${imageLink ? `<img src="${imageLink}" alt="${title}" class="news-image">` : ''}
                        <p>${description}</p>
                    `;

                    newsContainer.appendChild(newsItem);
                });
            } catch (error) {
                console.error(error);
            }

            loadingMessage.style.display = 'none';
        }


        fetchRSS('/el-mundo', 'elMundoNews');
        fetchRSS('/el-periodico', 'elPeriodicoNews');
    </script>
</body>
</html>
